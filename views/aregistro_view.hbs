              <div class="form-group">
                  <input type="text" name="nombre" class="form-control nombre" placeholder="Nombre" readonly>
              </div>
 
              <div class="form-group">
                  <input type="text" name="apellido" class="form-control apellido" placeholder="Apellido" readonly>
              </div>
              <div class="form-group">
                  <input type="text" name="telefono" class="form-control telefono" placeholder="Telefono" readonly>
              </div>
              <div class="form-group">
                  <input type="text" name="direccion" class="form-control direccion" placeholder="Dirección" readonly>
              </div>
              <div class="form-group">
                  <input id="aprobado" type="radio" name ="estado" required value="4" /> <label> Confirmar </label>
                  <input id="rechazado" type="radio" name ="estado" value="6" /> <label> Rechazar</label>
                  <input id="valor" type="text" name="valor" class="form-control valor" placeholder="Valor">
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" class="id">  
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
              <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </div>
        </div>
       </div>
  </form>
